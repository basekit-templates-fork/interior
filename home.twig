{% extends "layout.twig" %}

{% block content %}

<div class="homepage-centred-container">

{{widget('extendednavigation', 'navigation', {"align":"left"})|raw}}

<!-- Theme Feature Widget -->

{{widget('feature', 'featurehome', {
    "header": "profile",
    "defaultBgImg": asset('images/feature.jpg'),
    'positionTopPercentage': '0',
    'showBtn': true,
    buttonText: "Lorem Ipsum"
})|raw}}

{% include "includes/header.twig" %}

<div class="page-wrapper">

    <!-- Container -->
    <div class="container">

        <!-- Page Content -->
        <section class="template-content">

            <!-- Blog post list -->
            {{widget('blogpostlist', 'allblogposts', {})|raw}}

            <!-- Main Widget Zone -->
            {{zone('main')|raw}}

             <!-- Footer Text Widget -->
             <footer class="template-footer">
                {{widget('content', 'footer-content', {
                content: '<p>&copy; Copyright</p>'
                })|raw}}
            </footer>

        </section>
        <!-- End Page Content -->

    </div>
    <!-- End Container -->

</div>
<!-- End Page Wrapper -->

</div>

{% endblock %}
