{% extends "layout.twig" %}
{% block class %}bk-pt-blog{% endblock %}
{% block content %}


{{widget('extendednavigation', 'navigation', {"align":"left"})|raw}}

<div class="page-wrapper">

    <!-- Container -->
    <div class="container">

        {% include "includes/header.twig" %}

        <!-- Page Content -->
        <section class="template-content">

            <!-- Main Widget Zone -->
            {{widget('blogpostlist', 'allblogposts', {})|raw}}

        </section>

        <!-- Footer Text Widget -->
        {% include "includes/footer.twig" %}

    </div>

</div>


{% endblock %}


{% block scripts %}

    <!-- imagesLoaded -->
    <script src="{{asset('js/imagesloaded.min.js')}}"></script>

    <!-- Masonry -->
    <script src="{{asset('js/masonry.min.js')}}"></script>

    <!-- Masonry Initializer -->
    <script>
        var container = document.querySelector('.post-items');

        if (container) {
          imagesLoaded( container, function() {
            var msnry = new Masonry( container, {
              itemSelector: '.post-article'
            });
          });
        }
    </script>

{% endblock %}
